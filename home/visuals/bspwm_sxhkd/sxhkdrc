#
# wm independent hotkeys
#

# terminal
super + Return
    kitty

super + q
    kitty

# program launcher
super + c
    rofi -show drun -theme "$HOME/.config/rofi/themes/app_launcher.rasi"

# emoji selector launcher
super + shift + e
    rofi -modi emoji -show emoji -theme "$HOME/.config/rofi/themes/emoji_menu.rasi"

super + semicolon
    rofi -modi emoji -show emoji stdout -theme "$HOME/.config/rofi/themes/emoji_menu.rasi"

# Open Power menu
super + shift + z
    ~/bin/power_menu

# calculator
super + shift + c
    bspc rule -a \* -o state=floating && qalculate-gtk

super + F12
    bspc rule -a \* -o state=floating && qalculate-gtk

# calendar
super + shift + f
    ~/bin/calendar_launcher

# control center
super + shift + x
    ~/.config/eww/scripts/toggle_control_center.sh

# wifi
super + shift + y
    ~/bin/wifi_menu

# make sxhkd reload its config
super + shift + r
    pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm
super + shift + q
    ~/bin/close_bspwm

# restart bspwm
super + shift + r
    bspc wm -r

# close and kill
super + {_,shift + }w
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

#
# state/flags
#

# alternate between the window states
super + {t,shift + t,d,f}
    bspc node -t \~{tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

super + {_,shift + }{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }Escape
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + Tab
    bspc node -f last

# windows like
super + grave
    skippy-xd --expose

alt + grave
    skippy-xd --expose

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus to given desktop
super + {1-9,0}
    ~/bin/switch_desktop '^{1-9,10}'
    # bspc desktop -f '^{1-9,0}'

# send to given desktop
super + shift + {1-9,0}
    ~/bin/switch_desktop '^{1-9,10}' move
    # bspc node -d '^{1-9,10}'

# focus the last desktop
super + Tab
    ~/bin/switch_desktop -1 last
    # bspc desktop -f last

# send and follow to given desktop
super + alt + {1-9,0}
    ~/bin/switch_desktop '^{1-9,10}' follow
    # bspc node -d '^{1-9,10}' -f

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + {Left,Down,Up,Right}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + alt + shift + {Left,Down,Up,Right}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

super + F7
    ~/bin/dual_monitor mirror

super + shift + F7
    ~/bin/dual_monitor extend

# toggle polybar
super + alt + shift + x
    ~/bin/toggle_polybar

#
# brightness and volume
#

# change the brightness

super + shift + n
    brightnessctl s 0

super + {F5, F6}
    brightnessctl s 4800{-,+}

# change the volume

## toggle mute/unmute volume
super + F1
    pactl set-sink-mute 0 toggle

## toggle mute/unmute mic
super + F4
    pactl set-source-mute 0 toggle

super + {F2, F3}
    pactl set-sink-mute 0 false && pactl set-sink-volume 0 {-,+}5%

#
# take screenshot
#

# fullscreen screenshot save
super + Home
    ~/bin/screenshot -fm

# fullscreen screenshot save
super + Print
    ~/bin/screenshot -fm

# cropped save
super + shift + Home
    ~/bin/screenshot -s

# cropped save
super + shift + Print
    ~/bin/screenshot -s

# clipboard fullscreen
super + s
    ~/bin/screenshot -fcm

# clipboard cropped
super + shift + s
    ~/bin/screenshot -scm

# clipboard cropped + edit
ctrl + Home
    ~/bin/screenshot -sc

# clipboard cropped + edit
ctrl + Print
    ~/bin/screenshot -sc

Print
    ~/bin/screenshot -fcm

#
# utils
#

# lock screen
super + g
    ~/bin/lockscreen

super + shift +  v
    copyq menu

# touchpad
super + F10
    ~/bin/toggle_touchpad
